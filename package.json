{
  "name": "getting-started-typescript",
  "version": "1.0.0",
  "description": "Bolt getting started app in TypeScript",
  "license": "MIT",
  "main": "build/server.js",
  "scripts": {
    "build": "rm -rf build && tsc -p .",
    "build:client": "cd client && rm -rf build && npm run build",
    "build:all": "npm run build && npm run build:client",
    "build:watch": "tsc -w -p .",
    "lint": "eslint ./src",
    "start": "npm run build && node build/server.js",
    "dev": "concurrently \"cd client && npm start\" \"nodemon --watch build build/server.js\" ",
    "dev-once": "npm ci && prisma migrate dev && npm run build && cd client && npm ci && npm run build"
  },
  "nodemonConfig": {
    "ignore": [
      "**/test/**"
    ],
    "delay": 2500
  },
  "dependencies": {
    "@prisma/client": "^4.10.1",
    "@slack/bolt": "^3.12.2",
    "cookie-parser": "^1.4.6",
    "dotenv": "^8.2.0",
    "express": "^4.18.2",
    "node-schedule": "^2.1.1",
    "reflect-metadata": "^0.1.13",
    "tslib": "^2.5.0"
  },
  "devDependencies": {
    "@types/cookie-parser": "^1.4.3",
    "@types/express": "^4.17.16",
    "@types/node": "^14.14.35",
    "@types/node-schedule": "^2.1.0",
    "@typescript-eslint/eslint-plugin": "^5.51.0",
    "@typescript-eslint/parser": "^5.51.0",
    "concurrently": "^7.6.0",
    "eslint": "^8.33.0",
    "nodemon": "^2.0.20",
    "prisma": "^4.10.1",
    "ts-node": "^10.9.1",
    "typescript": "^4.9.5"
  }
}
